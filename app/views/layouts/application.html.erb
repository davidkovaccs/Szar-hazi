<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "custom" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <h1>Tőzsdei kereskedő rendszer</h1>
    <div id="user_nav">
      <% if user_signed_in? %>
        Signed in as <%= current_user.email %>. Not you?
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        <%= link_to "New account", new_account_path %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
      <% end %>
    </div>

    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <%= content_tag :h1, yield(:title) if show_title? %>

      <div>
      <div id="menu">
        <ul>
          <li><%= link_to "Kezdolap", '/' %></li>
          <li><%= link_to "Szamlak", "/show_accounts" %></li>
          <li><%= link_to "Uj Megbizas", :controller => 'orders', :action => 'new' %></li>
          <li><%= link_to "Megbizasok", :controller => 'orders', :action => 'index' %></li>
          <li><%= link_to "Ugyletek", :controller => 'transactions', :action => 'index' %></li>
        </ul>
      </div>
      <br/>
      <br/>

      <%= yield %>

      </div>
    </div>
  </body>
</html>
