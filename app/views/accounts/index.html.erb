<% title "Számláim" %>

<table>
  <tr>
    <th>Name</th>
    <th>Balance</th>
    <th>Active</th>
  </tr>
  <% for account in current_user.accounts %>
    <tr>
      <td><%= account.name %></td>
      <td><%= account.balance %></td>
      <td><%= account.active %></td>
      <!-- <td><%= link_to "Show", account %></td> -->
      <td><%= link_to "Activálás", :controller => "accounts", :action =>  'activate', :id => account.id %></td>
      <td><%= link_to "Módosítás", edit_account_path(account) %></td>
      <td><%= link_to "Törlés", account, :confirm => 'Biztosan?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Új számla létrehozása", new_account_path %></p>
