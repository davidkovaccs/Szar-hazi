<div id="bigbox">
  <div id="upper">
    <div id="leftside">
      <div id="buttons_to_buy">
        <%= button_to 'Vétel', {:action => 'buy', :stock_id => @stock_id}, :form_class => 'buy_button' %>
        <%= button_to 'Eladás', {:action => 'sell', :stock_id => @stock_id}, :form_class => 'sell_button' %>
      </div>
      <div id="stocks">
        <%= render "stocks" %>
      </div>
    </div>
    <div id="prices">
      <h1><%= Stock.find(@stock_id).name %></h1>
      <% 
      if current_user.accounts.empty?
        selected = "Nincs számlája"
      elsif current_user.accounts.find_by_active(1)
        selected = current_user.accounts.find_by_active(1).name
      else
        selected = current_user.accounts.first.name
      end
      %>
      <p id="active_account">Aktív számla: <%= selected %></p>
        <div>
        <%= render "pricegraph" %>
      </div>
    </div>
  </div>
  <div id="lower">
      <%= render "my_stocks" %>
  </div>
</div>
