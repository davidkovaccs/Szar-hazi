<% title "Megbízások" %>

<table>
  <tr>
    <th>Számla</th>
    <th>Részvény</th>
    <th>Ár</th>
    <th>Eladás</th>
  </tr>
  <%
    orders = Array.new
    current_user.accounts.map {|acc| orders = orders | acc.orders }
  %>
  <% for order in orders %>
    <tr>
      <td><%= order.account.name %></td>
      <td><%= order.stock.name %></td>
      <td><%= order.price %></td>
      <td><%= order.sell %></td>
      <!-- <td><%= link_to "Show", order %></td> -->
      <td><%= link_to "Szerkesztés", edit_order_path(order) %></td>
      <td><%= link_to "Törlés", order, :confirm => 'Biztosan?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
